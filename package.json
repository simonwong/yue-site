{
  "name": "yue-site",
  "private": true,
  "description": "yue-site blog",
  "author": "Simon <wsj_simon@163.com>",
  "keywords": [
    "Blog"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/simonwong/yue-site"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "eslint --ext .js,.ts,.jsx,.tsx --format=pretty ./pages",
    "lint:js-fix": "eslint --fix --ext .js,.ts,.jsx,.tsx --format=pretty ./pages",
    "lint:style": "stylelint \"styles/**/*.css\"",
    "lint:style-fix": "stylelint --fix \"styles/**/*.css\"",
    "lint:fix": "npm run lint:js-fix && npm run lint:style-fix"
  },
  "dependencies": {
    "next": "^13.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@yueqing/lint": "^2.4.0",
    "autoprefixer": "^10.4.14",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "postcss": "^8.4.21",
    "stylelint": "^14.16.1",
    "tailwindcss": "^3.3.1"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --fix --format=pretty"
    ],
    "**/*.css": [
      "stylelint --fix"
    ]
  }
}
